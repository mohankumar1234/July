package StepDefinitions;

import static org.testng.Assert.assertEquals;
import static org.testng.Assert.assertTrue;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

import POM.HomePage;
import cucumber.api.java.en.*;

public class LoginValidation 
{
WebDriver driver;
HomePage a1 = new HomePage(driver);


	@Given ("^I Launch \"(.*)\"$")
	public void launchurl(String url)
	{
		System.setProperty("webdriver.chrome.driver" , "D:\\Mohan\\Softwares\\Jar\\chromedriver_win32\\chromedriver.exe");
		driver = new ChromeDriver();
		driver.get(url);
		driver.manage().window().maximize();
	}
	
	@When ("^I Click \"(.*)\" in top menu$")
	public void clickTopMenuOption(String option)
	{
		HomePage a1 = new HomePage(driver);
		switch (option)
		{
		case "Log in":
			a1.clickLogin(driver);
		case "Register":
			a1.clickRegister(driver);
		}
		driver.findElement(By.xpath("//li/a[contains (text(), 'Log in')]")).click();
	}
	
	@Then ("^I validate the \"(.*)\" of the webpage$")
	public void validateWebPage(String actualTitle)
	{
		assertEquals(driver.getTitle(),actualTitle);
	}
	
	@Then ("^I Validate the WebElement text \"(.*)\"$")
	public void validateLabel(String label)
	{
		switch (label)
		{
		case "Email:":
			System.out.println(a1.getEmailText(driver));
			assertEquals (a1.getEmailText(driver) , label);
		case "Password:":
			assertEquals (a1.getPasswordText(driver) , label);
		case "Remember me?":
			assertEquals (a1.getRememberMeText(driver) , label);
		case "Forgot password?":
			assertEquals (a1.getForgotpasswordText(driver) , label);
		case "Log in":
			assertEquals (a1.getLoginText(driver) , label);
		}		
	}
	
	@Then ("^I Validate textbox to enter \"(.*)\" is enabled$")
	public void validateTextbox(String textbox)
	{
		switch (textbox)
		{
		case "Email":
			assertTrue (a1.getEmailStatus(driver));
			
		case "Password":
			assertTrue (a1.getPasswordStatus(driver));
		}
	}

	@Then ("^I quit browser$")
	public void quitbrowser()
	{
		driver.quit();
	}
}
